{
  "profiles": {
    // Profil DEV (celui que tu avais, juste renommé pour la clarté)
    "httpsA_Development": {
      "commandName": "Project",
      "environmentVariables": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "dotnetRunMessages": true,
      "applicationUrl": "https://localhost:7267;http://localhost:5079"
    },

    // LE NOUVEAU PROFIL : Mode Production
    "httpsB_Production": {
      "commandName": "Project",
      "environmentVariables": {
        "ASPNETCORE_ENVIRONMENT": "Production"
      },
      "dotnetRunMessages": true,
      // J'ai changé les ports pour éviter les conflits
      "applicationUrl": "https://localhost:7268;http://localhost:5080"
    },

    // Ton profil Docker (j'ai explicité l'environnement)
    "Container (Dockerfile)": {
      "commandName": "Docker",
      "launchUrl": "{Scheme}://{ServiceHost}:{ServicePort}",
      "environmentVariables": {
        // Un conteneur est (presque) toujours une build de prod
        "ASPNETCORE_ENVIRONMENT": "Production",
        "ASPNETCORE_HTTPS_PORTS": "8081",
        "ASPNETCORE_HTTP_PORTS": "8080"
      },
      "publishAllPorts": true,
      "useSSL": true
    },

    // J'ai laissé l'ancien "http" au cas où, mais tu peux le supprimer
    "http_Development_Only": {
      "commandName": "Project",
      "environmentVariables": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "dotnetRunMessages": true,
      "applicationUrl": "http://localhost:5079"
    }
  },
  "$schema": "https://json.schemastore.org/launchsettings.json"
}